<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Existing TextViews for sensor data -->
    <TextView
        android:id="@+id/text_mq2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MQ2 Sensor:" />

    <TextView
        android:id="@+id/text_mq4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MQ4 Sensor:" />

    <TextView
        android:id="@+id/text_mq7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MQ7 Sensor:" />

    <TextView
        android:id="@+id/text_mq135"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MQ135 Sensor:" />

    <!-- Horizontal LinearLayout to hold ImageButtons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/mq2_background"
            android:contentDescription="Button 1"
            android:background="?android:attr/selectableItemBackground" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/mq7_background"
            android:contentDescription="Button 3"
            android:background="?android:attr/selectableItemBackground" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Button 2"
            android:src="@drawable/mq4_background" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/mq135_background"
            android:contentDescription="Button 4"
            android:background="?android:attr/selectableItemBackground" />
    </LinearLayout>
</LinearLayout>
